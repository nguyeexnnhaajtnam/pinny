generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
  // Thêm dòng này để kích hoạt tính năng PostGIS
  previewFeatures = ["postgis"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

